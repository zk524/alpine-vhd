{
  "builders": [
    {
      "type": "qemu",
      "iso_url": "alpine-virt-3.17.0-x86_64.iso",
      "iso_checksum": "8D4D53BD34B2045E1E219B87887B0DE8D217B6CD4A8B476A077429845A5582BA",
      "disk_size": 512,
      "memory": 512,
      "format": "raw",
      "vm_name": "alpine.raw",
      "disk_interface": "ide",
      "disk_cache": "none",
      "net_device": "virtio-net",
      "skip_compaction": true,
      "communicator": "none",
      "boot_wait": "30s",
      "boot_command": [
        "root<enter>",
        "passwd<enter>root<enter>root<enter><wait>",
        "setup-keymap us us<enter>",
        "setup-hostname alpine<enter>",
        "setup-interfaces -a<enter>",
        "setup-sshd<enter><enter>yes<enter><enter><wait>",
        "echo https://mirrors.aliyun.com/alpine/latest-stable/main/ >> /etc/apk/repositories<enter>",
        "rc-service networking start && rc-update add networking boot<enter><wait>",
        "apk add --quiet parted e2fsprogs<enter><wait5>",
        "alias p='parted -sa optimal /dev/sda'<enter>",
        "p mklabel msdos<enter>",
        "p mkpart p 0 32MiB<enter>",
        "p mkpart p 32MiB 100%<enter>",
        "p set 1 boot<enter>",
        "mkfs.ext4 /dev/sda1<enter>",
        "mkfs.ext4 /dev/sda2<enter>",
        "mount -t ext4 /dev/sda2 /mnt<enter>",
        "mkdir /mnt/boot<enter>",
        "mount -t ext4 /dev/sda1 /mnt/boot<enter>",
        "setup-disk /mnt<enter>",
        "poweroff<enter>"
      ],
      "headless": true,
      "shutdown_command": "poweroff",
      "shutdown_timeout": "30m"
    }
  ]
}
